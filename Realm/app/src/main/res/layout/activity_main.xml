<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main1"
    tools:context="com.example.aditya.realm.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_name"
            android:text=""
            android:hint="Product Name"
            android:padding="5dp"
            android:layout_margin="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_image_url"
            android:text=""
            android:hint="Product Url"
            android:padding="5dp"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product__insert"
            android:text="Save"
            android:textAllCaps="false"
            android:padding="10dp"
            android:layout_margin="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product__show"
            android:text="Show Products"
            android:textAllCaps="false"
            android:padding="10dp"
            android:layout_margin="10dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product__update"
                android:text="Update "
                android:textAllCaps="false"
                android:padding="10dp"
                android:layout_margin="10dp"/>
        </LinearLayout>
       <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_update_name"
            android:text=""
            android:hint="Update Product"
            android:padding="5dp"
            android:layout_margin="10dp"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/product_list">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>




</LinearLayout>
